html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/main.css')
    link(href='/css/landing.css', rel='stylesheet', type='text/css')
  body
    .cover
      .navbar.navbar-default
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-ex-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#')
              span Study Buddy
          #navbar-ex-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li.active
                a(href='#') Product
              li
                a(href='#') Pricing
              li
                a(href='#')
                  | About Us
                  br
      .cover-image
      .container
        .row
          .col-md-12.text-center
            h1 Study Buddy
            p Studying with classmates made easy.
            br
            br
            a.btn.btn-lg.btn-default(data-toggle='modal', data-target='#signupModal') Sign Up
            a.btn.btn-default.btn-lg(data-toggle='modal', data-target='#loginModal') Login
    #loginModal.fade.modal(tabindex='-1')
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4.modal-title.text-primary Sign in
          .modal-body
            p.text-primary
              include partials/login
    #signupModal.fade.modal(tabindex='-1')
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4.modal-title.text-primary Sign up
          .modal-body
            p.text-primary
              include partials/signup

    script(src='/js/lib/jquery-2.2.0.min.js')
    script(src='/js/lib/bootstrap.min.js')
